<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenÃº"
        android:layout_marginTop="15dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#5867E8"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="55dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_vegetables_background"
                android:background="@drawable/image_shapes"
                android:paddingLeft="10dp"
                />

            <Button
                android:id="@+id/fruits_button"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:text="@string/fruits"
                android:textAlignment="textStart"
                android:background="@drawable/main_buttons"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/image_shapes"
                android:paddingLeft="10dp"
                android:src="@mipmap/ic_fruits_background" />

            <Button
                android:id="@+id/vegetables_button"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:text="@string/vegetables"
                android:textAlignment="textStart"
                android:background="@drawable/main_buttons"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/image_shapes"
                android:paddingLeft="10dp"
                android:src="@mipmap/ic_fruits_background"
                app:srcCompat="@mipmap/ic_dairy_background" />

            <Button
                android:id="@+id/dairy_button"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:text="@string/dairy"
                android:textAlignment="textStart"
                android:background="@drawable/main_buttons"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_gravity="bottom"
        android:background="#7812A8"
        >

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/display_name_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="John Doe" />

        <Button
            android:id="@+id/credits_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#7812A8"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Salir"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/display_name_text_view"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>