<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/display_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/profile_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        tools:text="John Doe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="48dp">

        <Button
            android:id="@+id/fruits_button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/ic_fruits"
            android:text="@string/fruits"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/vegetables_button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/ic_vegetables"
            android:text="@string/vegetables"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/dairy_button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/ic_dairy"
            android:text="@string/dairy"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/sign_out"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_sign_out"
        android:drawablePadding="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>